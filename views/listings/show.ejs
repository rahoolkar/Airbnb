<% layout("layouts/boilerplate.ejs") -%>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <h3>
                    <%= listing.title %>
                </h3>
            </div>
            <div class="card col-8 offset-2 listing-card">
                <img src="<%= listing.image %>" alt="listing-image" class="listing-img card-img-top">
                <p class="card-text">Owned by <i>
                        <%= listing.owner.username %>
                    </i></p>
                <div class="card-body">
                    <p class="card-text">
                        <%= listing.description %>
                    </p>
                    <p class="card-text">
                        â‚¹ <%= listing.price.toLocaleString("en-IN") %>
                    </p>
                    <p class="card-text">
                        <%= listing.location %>
                    </p>
                    <p class="card-text">
                        <%= listing.country %>
                    </p>
                </div>
            </div>
            <% if(loggedInUser && loggedInUser._id.equals(listing.owner._id)){ %>
                <div class="btns col-8 offset-2">
                    <form action="/listings/<%= listing._id %>/edit" method="get">
                        <button class="btn btn-primary edit-btn">EDIT</button>
                    </form>
                    <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
                        <button class="btn btn-dark delete-btn">DELETE</button>
                    </form>
                </div>
                <% } %>
                    <% if(loggedInUser){ %>
                        <div class="col-8 offset-2">
                            <hr>
                            <h3>Leave a Review</h3>
                            <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate
                                class="needs-validation">
                                <div class="mb-3 mt-3">
                                    <label for="rating" class="form-label">Rating</label>
                                    <input type="range" min="1" max="5" id="rating" name="rating" class="form-range"
                                        step="1" required>
                                </div>
                                <div class="mb-3 mt-3">
                                    <label for="comment" class="form-label">Write your thoughts</label>
                                    <textarea name="comment" id="comment" class="form-control" required></textarea>
                                    <div class="invalid-feedback">Please add some proper comment for review.</div>
                                </div>
                                <button class="btn btn-outline-dark">Submit</button>
                            </form>
                        </div>
                        <% } %>
                            <% if(listing.reviews.length!=0){ %>
                                <div class="col-8 offset-2 mt-3 mb-3">
                                    <hr>
                                    <h3>All Reviews</h3>
                                    <div class="row g-3">
                                        <% for(let review of listing.reviews){ %>
                                            <div class="card col-3 mb-3 ms-2">
                                                <div class="card-body">
                                                    <h5 class="card-title">
                                                        <%= review.author.username %>
                                                    </h5>
                                                    <p class="card-text">
                                                        <%= review.comment %>
                                                    </p>
                                                    <p class="card-text">
                                                        <%= review.rating %> stars
                                                    </p>
                                                    <form
                                                        action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                                        class="mb-1" method="post">
                                                        <button class="btn btn-sm btn-dark">Delete</button>
                                                    </form>
                                                </div>
                                            </div>
                                            <% } %>
                                    </div>
                                </div>
                                <% } %>
        </div>
    </body>